<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="Theme.Franceterme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_franceterme</item>
        <item name="popupMenuStyle">@style/PopupMenu.Franceterme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Franceterme</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Franceterme</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Franceterme</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Franceterme</item>
        <item name="actionModeBackground">@drawable/cab_background_top_franceterme</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_franceterme</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Franceterme</item>
    </style>


    <style name="term_expanded_container">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="textSize_default">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CustomActionBar">
        <item name="android:imageButtonStyle">@style/CustomActionBar.Buttons</item>
        <item name="android:textViewStyle">@style/CustomActionBar.Banner</item>
    </style>

    <style name="CustomActionBar.Buttons">
        <item name="android:background">@drawable/tab_indicator_ab_franceterme</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:selectable">true</item>
        <item name="android:drawableRight">@drawable/btn_cab_done_default_franceterme</item>
    </style>


    <style name="CustomActionBar.Banner">
        <item name="android:background">@color/default_pink</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Term_Title" >
        <item name="android:textSize">@dimen/term_title_textsize</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>


    <style name="Term_Data" >
        <item name="android:textSize">@dimen/term_data_textsize</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="Term_DetailsDisplay_LabelColumn">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:minWidth">@dimen/term_detailsdisplay_labelcolumn_minwidth</item>
        <item name="android:maxWidth">@dimen/term_detailsdisplay_labelcolumn_maxwidth</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/term_display_table_label_weight</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Term_DetailsDisplay_DataColumn">
        <item name="android:textSize">@dimen/term_title_textsize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/term_display_table_data_weight</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

</resources>