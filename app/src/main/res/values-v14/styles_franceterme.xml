<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="Theme.Franceterme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_franceterme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Franceterme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Franceterme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Franceterme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Franceterme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Franceterme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_franceterme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_franceterme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Franceterme</item>
        
        
    </style>

    <style name="ActionBar.Solid.Franceterme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_franceterme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_franceterme</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_franceterme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Franceterme</item>
    </style>

    <style name="ActionBar.Transparent.Franceterme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_franceterme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Franceterme</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Franceterme.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Franceterme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Franceterme</item>
    </style>

</resources>